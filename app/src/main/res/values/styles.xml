<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- the app theme -->
    <style name="Solidarinsa" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorRedInsa</item>
        <item name="android:textColorPrimary">@color/colorBlackInsa</item>
        <item name="colorAccent">@color/colorRedInsa</item>
        <item name="android:statusBarColor">@color/colorBlackInsa</item>
        <item name="android:navigationBarColor">@color/colorBlackInsa</item>
        <item name="colorButtonNormal">@color/colorBlackInsa</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorRedInsa</item>
        <item name="buttonStyle">@style/ButtonStyleRedText</item>
    </style>

    <!-- BUTTON STYLES -->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyleRedWhite" parent="@style/Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorRedInsa</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyleRedText" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorRedInsa</item>
    </style>


    <style name="TitleStyle">
        <item name="android:textSize">@dimen/titleSize</item>
    </style>

    <!-- Round button style -->
    <style name="SharePointsButtons" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/round_square_shape</item>
    </style>

    <style name="SquareRoundButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_square_shape</item>
    </style>

    <style name="PlusButtons" parent="SharePointsButtons">
        <item name="android:src">@drawable/ic_add_white_24dp</item>
    </style>

    <style name="MinusButtons" parent="SharePointsButtons">
        <item name="android:src">@drawable/ic_remove_white_24dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/round_square_shape</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/pointSize</item>
    </style>

    <style name="MessageSentStyle">
        <item name="android:background">@drawable/chat_message_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MessageReceivedStyle">
        <item name="android:background">@drawable/chat_answer_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ChatEditTextStyle">
        <item name="android:background">@drawable/chat_write_shape</item>
    </style>
</resources>
