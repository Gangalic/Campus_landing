<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQActivity">

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRedInsa"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="launchProfile"
            app:srcCompat="@drawable/ic_person_24dp"/>

        <TextView
            android:id="@+id/chatTitle_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FAQ"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleSize"/>

        <TextView
            android:id="@+id/points_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10 PTS"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleSize"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorRedInsa"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_search_white_24dp"
            android:onClick="launchNewRequest"
            android:text="@string/demande"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home_white_24dp"
            android:onClick="launchHomePage"
            android:text="@string/accueil"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_chat_white_24dp"
            android:onClick="launchExchanges"
            android:text="@string/echanges"
            android:textSize="12sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="434dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/faq1_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="73dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="expandFAQ1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/faq1_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comment gagner des points ?"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/faq_img_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/ic_faq_hidden_24dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pour gagner des points afin de pouvoir emprunter des objets aux autres Insaliens il suffit de prêter des choses à votre tour ! \nA chaque fois que vous prêtez un objet vous gagnez un point. \nUne autre possibilité est de demander à un ami de vous prêter des points, à condition qu\'il lui en reste biensûr !"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq2_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="73dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="expandFAQ2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/faq2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comment donner des points à un ami ?"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/faq_img_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/ic_faq_hidden_24dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pour donner des points à un ami qui est à sec c'est très simple !\nRendez-vous sur votre profil, dans l'onglet paramètres vous trouverez en bas de la fenêtre l'option &quot;Donner des points&quot;.\nLaissez-vous alors guider par les instructions affichées, validez et bingo !\n\nAttention : il faut que votre ami possède une adresse email insa pour lui donner des points."/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq3_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:animateLayoutChanges="true"
                android:background="@android:color/white"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="73dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="expandFAQ2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/faq3_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comment ajouter un nouvel objet à prêter?"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/faq_img_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/ic_faq_hidden_24dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vous disposez d'un objet que vous aimeriez prêter aux autres Insaliens ?\nPour ajouter ce nouvel objet à votre compte, rendez-vous dans votre profil. En bas de votre profil, vous trouverez une liste de vos objets déjà enregistrés. Pour ajouter un nouvel objet, tapez sur le bouton editer et laissez-vous guider !"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>